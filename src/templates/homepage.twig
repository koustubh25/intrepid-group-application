{% include 'header.twig' %}

<div class="container">
    <div class="starter-template">
        <h1>My Book Catalogue</h1>
        <table class="table">
            <thead>
                <tr><th>Title</th><th>Author</th><th>Year</th><th>Language</th></tr>
            </thead>
            <tbody>
                {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td><td>{{ book.author }}</td><td>{{ book.year }}</td><td>{{ book.language }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

