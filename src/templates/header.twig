    <script>

        var booksApp = angular.module('booksApp',['booksControllers', 'ui.filters']);

        angular.module('booksControllers',[]).
                    controller('booksController', function($scope){

            $scope.initialize = function(){
                var bookset = document.querySelector('.bookset');
                var books = JSON.parse(bookset.dataset.books);
                $scope.books = books;
            }

            $scope.orderByField = 'year';
            $scope.reverseSort = true;

           $scope.initializeLanguage = function(language){
                $scope.selectedLanguage = language;
           }

           $scope.updateLanguage = function(language){
                $scope.selectedLanguage = language;
           }
        })

    </script>

